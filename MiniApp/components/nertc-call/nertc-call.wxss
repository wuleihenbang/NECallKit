.nertc-room-container {
  width: 100vw;
  height: 100vh;
  background-color: #000;
  padding: 88rpx 0 68rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-content: flex-start;
}
.nertc-content-container {
  width: 100vw;
  height: 100vh;
}

.user-item {
  position: relative;
  border: 1rpx solid #000;
  background-color: #292932;
  /* 安卓横屏放不下的问题 */
  width: calc(50vw - 5rpx);
  /* iphoneX竖屏看不到底部昵称的问题 */
  height: calc(50vh - 150rpx);
  z-index: 500;

  width: 200rpx;
  height: 200rpx;
  position: fixed;
  bottom: 230rpx;
  z-index: 700;
  left: 56rpx;
}

.user-item.fullscreen {
  position: fixed;
  top: 88rpx;
  left: 0;
  width: 100vw;
  height: calc(100vh - 176rpx);
  z-index: 500;
}



.nickName-container {
  position: absolute;
  left: 16rpx;
  bottom: 16rpx;
  border-radius: 4rpx;
  padding: 4rpx 8rpx;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 800;
}

.nickName-container .user-audio {
  width: 26rpx;
  height: 26rpx;
  margin-right: 4rpx;
}

.nickName-container .text {
  color: #fff;
  font-size: 24rpx;
}

.net-status {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  border-radius: 4rpx;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 8rpx;
  z-index: 800;
}

.net-status .net-status-icon {
  width: 24rpx;
  height: 24rpx;
}

.icon-fullscreen {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  z-index: 800;
}

.tools {
  position: fixed;
  bottom: 100rpx;
  left: 74rpx;
  right: 74rpx;
  border-radius: 60rpx;
  background-color: #1A1A23;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx 80rpx;
  z-index: 1000;
}
.tools.show {
  display: flex;
}

.tools.hidden {
  display: none;
}

.audio-tools {
  left: auto;
  right: auto;
}

.audio-tools .icon {
  margin: 0 20rpx;
}

.more-tools {
  position: fixed;
  width: 150rpx;
  bottom: 230rpx;
  right: 74rpx;
  border-radius: 8rpx;
  background-color: #1A1A23;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx;
  z-index: 1000;
}

.icon {
  width: 48rpx;
  height: 48rpx;
}

.pusher, .player {
  width: 100%;
  height: 100%;
  background-color: #292932;
}

.dialog-mask {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1200;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.dialog-mask .dialog-inner {
  width: 100vw;
  height: auto;
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #222;
  background-color: #fff;
  border-radius: 30rpx 30rpx 0 0;
  font-size: 30rpx;
}

.dialog-mask .dialog-inner .dialog-title {
  font-size: 32rpx;
  border-bottom: 1rpx solid #e6e7eb;
  width: 100%;
  padding: 24rpx 0;
  text-align: center;
}

.dialog-mask .dialog-inner .dialog-content {
  width: 90%;
  margin: 40rpx 0 100rpx;
}

.dialog-beauty-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 120rpx;
}

.dialog-beauty-content .beauty-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.dialog-beauty-content .beauty-item-img {
  margin-bottom: 20rpx;
  width: 120rpx;
  height: 120rpx;
}

.dialog-beauty-content .beauty-item-title {
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.dialog-beauty-content .beauty-item-value {
  color: #666;
}

.status-item:not(:last-child) {
  margin-bottom: 10rpx;
}
